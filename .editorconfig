# EditorConfig helps maintain consistent coding styles
# for multiple developers working on the same project
# https://editorconfig.org/

root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# YAML files  
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Python files (explicit)
[*.py]
indent_size = 4
max_line_length = 100

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4