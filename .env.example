# =============================================================================
# OTOGRAM - PERSONAL TELEGRAM AUTOMATION - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your credentials
# Quick setup: cp .env.example .env

# =============================================================================
# üîê TELEGRAM CREDENTIALS (REQUIRED)
# =============================================================================
# Get from https://my.telegram.org (API Development Tools)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Your phone number (international format with +)
TELEGRAM_PHONE_NUMBER=+628123456789

# =============================================================================
# üóÑÔ∏è DATABASE
# =============================================================================
MONGO_URL=mongodb://localhost:27017
DB_NAME=otogram

# =============================================================================
# ‚öôÔ∏è BASIC SETTINGS
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# üì® TIMING SETTINGS (Conservative defaults for safety)
# =============================================================================
# Delay between messages (seconds)
MIN_MESSAGE_DELAY=8
MAX_MESSAGE_DELAY=15

# Delay between broadcast cycles (hours)  
MIN_CYCLE_DELAY_HOURS=2.0
MAX_CYCLE_DELAY_HOURS=3.0

# =============================================================================
# üõ°Ô∏è SAFETY LIMITS (Start small and increase gradually)
# =============================================================================
# Groups per cycle (recommended: start with 10-20)
MAX_GROUPS_PER_CYCLE=20

# Daily message limit
MAX_MESSAGES_PER_DAY=500

# Auto cleanup blacklist
AUTO_CLEANUP_BLACKLIST=true

# =============================================================================
# üìÅ DIRECTORIES (Usually no need to change)
# =============================================================================
SESSION_DIR=sessions
LOG_DIR=logs