# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
MONGO_URL=mongodb://localhost:27017
DB_NAME=telegram_automation

# ===== TELEGRAM API CREDENTIALS =====
# Get from https://my.telegram.org
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# Get from @BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Your phone number for userbot (international format)
TELEGRAM_PHONE_NUMBER=+628123456789

# ===== SYSTEM SETTINGS =====
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# ===== MESSAGE TIMING CONFIGURATION =====
# Delay between messages (seconds)
MIN_MESSAGE_DELAY=5
MAX_MESSAGE_DELAY=10

# Delay between broadcast cycles (hours)
MIN_CYCLE_DELAY_HOURS=1.1
MAX_CYCLE_DELAY_HOURS=1.3

# ===== OPTIONAL SETTINGS =====
# Maximum groups per cycle (0 = unlimited)
MAX_GROUPS_PER_CYCLE=0

# Enable automatic blacklist cleanup
AUTO_CLEANUP_BLACKLIST=true

# ===== DEVELOPMENT SETTINGS =====
# Only set these in development environment
# DEV_MODE=true
# DEBUG_SQL=false
# MOCK_TELEGRAM=false